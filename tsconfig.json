{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "components": [
                "components/*"
            ],
            "actions": [
                "actions/*"
            ],
            "models": [
                "models/*"
            ],
            "reducers": [
                "reducers/*"
            ],
            "sagas": [
                "sagas/*"
            ],
            "containers": [
                "containers/*"
            ],
            "declarations": [
                "declarations/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx"
    ],
    "ignore": [
        "src/__tests__/**/*.*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": true
    }
}