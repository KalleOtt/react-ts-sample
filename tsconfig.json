{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "src/*",
                "declarations/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "declarations/**/*.d.ts"
    ],
    "ignore": [
        "__tests__"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": true
    }
}