{
    "compilerOptions": {
        "inlineSourceMap": true,
        "inlineSources": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "allowUnusedLabels": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*",
                "declarations/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "declarations/**/*.d.ts"
    ],
    "exclude": [
        "src/__tests__/**/*",
        "src/__mocks__/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": true
    }
}