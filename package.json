{
  "name": "kiel-react-ts",
  "version": "0.1.0",
  "description": "Small sample to show usage of react with typescript",
  "scripts": {
    "start": "node hotReloadingServer.js",
    "build": "webpack",
    "test": "jest --coverage --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KalleOtt/react-ts-sample.git"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "typescript-babel-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "src/__mocks__/fileMock.js",
      "\\.(s?css|less)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/actions/*.{ts,tsx}",
      "src/components/*.{ts,tsx}",
      "src/containers/*.{ts,tsx}",
      "src/models/*.{ts,tsx}",
      "src/reducers/*.{ts,tsx}",
      
      "src/redux/*.{ts,tsx}",
      "src/store/*.{ts,tsx}"
    ],
    "moduleDirectories": [
      "node_modules",
      "src",
      "src/actions",
      "src/components",
      "src/containers",
      "src/models",
      "src/reducers",
      "src/redux",
      "src/store"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testRegex": "src/__tests__/.*\\.test\\.(ts|tsx|js|jsx)$"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "latest",
    "@types/marked": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/react-hot-loader": "latest",
    "@types/react-redux": "latest",
    "@types/redux-actions": "latest",
    "@types/redux-devtools": "latest",
    "@types/webpack": "latest",
    "autoprefixer": "latest",
    "awesome-typescript-loader": "latest",
    "babel": "latest",
    "babel-core": "latest",
    "babel-jest": "latest",
    "babel-loader": "latest",
    "babel-plugin-transform-regenerator": "latest",
    "babel-polyfill": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-react": "latest",
    "babel-preset-stage-0": "latest",
    "css-loader": "latest",
    "express": "latest",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "identity-obj-proxy": "latest",
    "immutability-helper": "latest",
    "jest": "latest",
    "marked": "latest",
    "node-sass": "latest",
    "normalize.css": "latest",
    "postcss-loader": "latest",
    "react": "latest",
    "react-addons-css-transition-group": "latest",
    "react-dom": "latest",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "latest",
    "react-test-renderer": "latest",
    "react-toolbox": "1.2.5",
    "redux": "latest",
    "redux-actions": "latest",
    "redux-devtools": "latest",
    "redux-mock-store": "latest",
    "redux-observable": "latest",
    "redux-saga": "latest",
    "rxjs": "latest",
    "sass-loader": "latest",
    "source-map-loader": "latest",
    "style-loader": "latest",
    "ts-jest": "latest",
    "typescript": "latest",
    "typescript-babel-jest": "latest",
    "webpack": "latest",
    "webpack-dev-server": "latest"
  }
}
